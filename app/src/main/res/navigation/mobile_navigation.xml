        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/nav_reports"
        android:name="com.example.trashapp.ui.reports.ReportsFragment"
        android:label="@string/menu_reports"
        tools:layout="@layout/fragment_groups" />

    <fragment
        android:id="@+id/nav_groups"
        android:name="com.example.trashapp.ui.groups.GroupsFragment"
        android:label="@string/menu_groups"
        tools:layout="@layout/fragment_groups" />

    <fragment
        android:id="@+id/nav_account"
        android:name="com.example.trashapp.ui.account.AccountFragment"
